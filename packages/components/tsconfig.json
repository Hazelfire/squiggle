{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "sourceMap": true
  },
  "target": "ES6",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
